<section class="sessions-show">

  <header class="page-header">
    <h1>
      Create account
    </h1>
  </header>
  <div class="container">
    <div class="row">
    <div class="col-xs-6">
    <%=form_for:user, url: '/users' do |f|%>
        <%= f.text_field :name,  class: "form-control", placeholder: "Enter your name" %>
        <br><br>
        <%= f.text_field :mblno ,  class: "form-control",placeholder: "Enter your mobile number" %>
        <br><br>
        <%= f.text_field :email,  class: "form-control",placeholder: "Enter your Email" %>
        <br><br>
        <%= f.password_field:password,  class: "form-control",placeholder: "Enter your password" %>
        <br><br>
        <%= f.submit "Save", class: "btn btn-primary"  %>
    <%end%>
    </div>
    </div>
</div>
</section>
