<section class="sessions-show">

  <header class="page-header">
    <h1>
      Create account
    </h1>
  </header>
  <div class="container">
    <div class="row">
    <div class="col-xs-6">
    <%=form_for:user, url: '/users' do %>
        <%= text_field_tag :name, nil,  class: "form-control", placeholder: "Enter your name" %>
        <br><br>
        <%= text_field_tag :mblno, nil,  class: "form-control",placeholder: "Enter your mobile number" %>
        <br><br>
        <%= text_field_tag :email, nil,  class: "form-control",placeholder: "Enter your Email" %>
        <br><br>
        <%= password_field_tag :password, nil,  class: "form-control",placeholder: "Enter your password" %>
        <br><br>
        <%= submit_tag "Save", class: "btn btn-primary"  %>
    <%end%>
    </div>
    </div>
</div>
</section>
