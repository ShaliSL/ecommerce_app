<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd>Rs. <%= @product.price %></dd>
          <%= link_to 'Buy Now', '/buynow', class: "btn btn-primary"%>
        </dl>
      </div>

  </article>

</section>
