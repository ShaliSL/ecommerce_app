<h1>Create Account</h1>
<div>
    <%=form_tag '/register' do %>
        <%= text_field_tag :name, nil, placeholder: "Enter your name" %>
        <br><br>
        <%= text_field_tag :mblno, nil, placeholder: "Enter your mobile number" %>
        <br><br>
        <%= text_field_tag :email, nil, placeholder: "Enter your Email" %>
        <br><br>
        <%= password_field_tag :password, nil, placeholder: "Enter your password" %>
        <br><br>
        <%= submit_tag "Save" %>
    <%end%>
</div>
