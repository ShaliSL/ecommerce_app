<section class="sessions-show">

  <header class="page-header">
    <h1>
        Contact Us
    </h1>
  </header>
  <div class="container">
    <div class="row">
    <div class="col-xs-6">
<%= form_tag '/contactus' do %>
    <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter your name" %>
    <br>
    <br>
    <%= text_field_tag :address, nil, class: "form-control", placeholder: "Enter your address" %>
    <br>
    <br>
    <%= text_field_tag :message, nil, class: "form-control", placeholder: "Enter your message" %>
    <br>
    <br>
    <%= submit_tag "Submit", class: "btn btn-primary" %>
<%end%>
</div>
</div>
</div>

</section>