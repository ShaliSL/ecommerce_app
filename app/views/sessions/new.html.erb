<section class="sessions-show">

  <header class="page-header">
    <h1>
      Login
    </h1>
  </header>
  <div class="container">
    <div class="row">
    <div class="col-xs-6">
    <%=form_for:user, url: '/login_user' do |f|%>
        <%= f.text_field :email,  class: "form-control",placeholder: "Enter your Email", required: true %>
        <br><br>
        <%= f.password_field:password,  class: "form-control",placeholder: "Enter your password", required: true %>
        <br><br>
        <%= f.submit "Save", class: "btn btn-primary"  %>
    <%end%>
    </div>
    </div>
</div>
</section>
