<header>
    <h1>Login</h1>
</header>
<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <%=form_tag '/login' do %>
                <%= text_field_tag :email, nil, placeholder: "Email" %>
                <br><br>
                <%= password_field_tag :password, nil, placeholder: "Password" %>
                <br>
                <br>
                <%= submit_tag "Submit" %>
                <%end%>
        </div>
    </div>
</div>